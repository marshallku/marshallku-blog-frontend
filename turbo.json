{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "outputs": ["dist/**", "storybook-static/**", ".next/**"],
            "dependsOn": ["^build"]
        },
        "lint": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "test": {
            "cache": false,
            "dependsOn": ["^build"]
        },
        "test:e2e": {
            "cache": false
        },
        "test:visual-regression": {
            "cache": false
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "dependsOn": ["^build"],
            "env": [
                "NODE_ENV",
                "CI",
                "NEXT_PUBLIC_BLOG_ORIGIN",
                "NEXT_PUBLIC_CDN_URL",
                "NEXT_PUBLIC_FILE_CDN_URL",
                "NEXT_PUBLIC_API_URL",
                "NEXT_PUBLIC_NR_ACCOUNT_ID",
                "NEXT_PUBLIC_NR_LICENSE_KEY",
                "NEXT_PUBLIC_NR_APPLICATION_ID"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}
