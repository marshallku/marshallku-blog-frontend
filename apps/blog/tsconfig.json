{
    "extends": "@marshallku/typescript-config/react-library.json",
    "include": [".", "next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["dist", "build", "node_modules"],
    "compilerOptions": {
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "resolveJsonModule": true,
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "baseUrl": ".",
        "paths": {
            "#*": ["./src/*"]
        }
    }
}
